<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "就業日" %><br>
    <%= f.date_select :work_date, :default => Time.now, :use_month_numbers => true %>
  </div>
  <div class="field">
    <%= f.label "お題" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "出社" %><br>
    <%= f.datetime_select :work_time_start, :default => Time.now, :use_month_numbers => true %>
  </div>
  <div class="field">
    <%= f.label "退社" %><br>
    <%= f.datetime_select :work_time_end, :default => Time.now, :use_month_numbers => true %>
  </div>
  <div class="field">
    <%= f.label "出来事" %><br>
    <%= f.text_field :body %>
  </div>
  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>
